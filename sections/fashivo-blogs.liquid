{% if section.settings.blog_category.articles != blank %}
  {% assign defaultBlogs = section.settings.blog_category.articles %}
{% else %}
  {% assign defaultBlogs = blogs.news.articles %}
{% endif %}
<section class="blogs-section pt-110 pb-100">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-8">
        <!-- === Section Title  === -->
        <div class="section-title mb-50">
          {% render 'section-title' %}
        </div>
      </div>
      <div class="col-md-4">
        <div class="blogs-arrows d-flex style-one mb-60"></div>
      </div>
    </div>
    <!-- === Blog Slider === -->
    <div class="blogs-slider-one">
      <!-- === Blog Post Item === -->
      {% for single_blog in defaultBlogs %}
        <div class="blog-post-item style-three mb-30">
          <div class="post-thumbnail">
            <img src="{{ single_blog.image |  image_url: width: 200, height: 200}}" alt="{{article.title}}">
          </div>
          <div class="post-content">
            <div class="post-meta">
              <span
                ><a href="{{section.settings.blog_category.url}}">{{ section.settings.blog_category.title }}</a></span
              >
              <span
                ><a href="{{ single_blog.url }}">{{ single_blog.published_at | date: '%B %d, %Y' }}</a></span
              >
            </div>
            <h3 class="title">
              <a href="{{ single_blog.url }}">{{ single_blog.title }}</a>
            </h3>
            <a href="{{ single_blog.url }}" class="theme-btn style-one">Reed More</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Fashivo Blogs Section",
  "settings": [
    {
      "type": "text",
      "label": "Section Title",
      "id": "section_title",
      "default": "Explore Our Blogs"
    },
    {
      "type": "text",
      "label": "Section Subtitle",
      "id": "section_subtitle",
      "default": "Read Our Latest Articles"
    },
    {
      "type": "blog",
      "label": "Select Blog Category to Display",
      "id": "blog_category"
    }
  ],
  "presets": [
    {
      "name": "Fashivo Blogs Section",
      "category": "sections"
    }
  ]
}
{% endschema %}
