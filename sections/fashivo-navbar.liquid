{% assign navigation_menu = section.settings.navbar_menu %}
<header class="header-area">
  <!-- === Search Header Main === -->
  <div class="header-top d-lg-block d-none">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <!-- === Header Top Left === -->
          <div class="top-left">
            <ul>
              <li>
                <span><i class="fas fa-shipping-fast"></i>{{ section.settings.shipping_text }}</span>
              </li>
              <li>
                <div class="pesco-dropdown">
                  <a href="javascript:void(0)">
                    {{ shop.currency }}
                    <i class="far fa-angle-down"></i>
                  </a>
                  <ul class="dropdown">
                    {% for currency in shop.enabled_currencies %}
                      <li>
                        <a href="?currency={{ currency }}">{{ currency.iso_code }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              </li>
              <li>
                <div class="pesco-dropdown">
                  <a href="javascript:void(0)">
                    {{ localization.available_languages.first.name }}
                    <i class="far fa-angle-down"></i
                  ></a>
                  <ul class="dropdown">
                    {% for country in localization.available_languages -%}
                      <li>
                        <a href="javascript:void(0)">{{ country.name }}</a>
                      </li>
                    {%- endfor %}
                  </ul>
                </div>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6">
          <!-- === Header Top Right === -->
          <div class="top-right">
            <ul>
              <li>
                <span
                  ><i class="fas fa-headset"></i
                  ><a href="tel:+{{section.settings.shop_contact_phone }}" class="pesco-support">
                    {% if section.settings.shop_contact_phone != blank %}
                      {{ section.settings.shop_contact_phone }}
                    {% else %}
                      {{ shop.phone }}
                    {%- endif %}
                  </a></span
                >
              </li>
              <li>
                <div class="social-box">
                  <span>{{ section.settings.social_box }}</span>

                  {% if settings.social_facebook_link != blank %}
                    <a href="{{ settings.social_facebook_link }}" target="_blank"><i class="flaticon-facebook"></i></a>
                  {% endif %}

                  {% if settings.social_instagram_link != blank %}
                    <a href="{{ settings.social_instagram_link }}" target="_blank"
                      ><i class="flaticon-instagram"></i
                    ></a>
                  {% endif %}

                  {% if settings.social_youtube_link != blank %}
                    <a href="{{ settings.social_youtube_link }}" target="_blank"><i class="flaticon-youtube"></i></a>
                  {% endif %}

                  {% if settings.social_tiktok_link != blank %}
                    <a href="{{ settings.social_tiktok_link }}" target="_blank"><i class="flaticon-tiktok"></i></a>
                  {% endif %}

                  {% if settings.social_twitter_link != blank %}
                    <a href="{{ settings.social_twitter_link }}" target="_blank"><i class="flaticon-twitter"></i></a>
                  {% endif %}

                  {% if settings.social_snapchat_link != blank %}
                    <a href="{{ settings.social_snapchat_link }}" target="_blank"><i class="flaticon-snapchat"></i></a>
                  {% endif %}

                  {% if settings.social_pinterest_link != blank %}
                    <a href="{{ settings.social_pinterest_link }}" target="_blank"
                      ><i class="flaticon-pinterest"></i
                    ></a>
                  {% endif %}

                  {% if settings.social_tumblr_link != blank %}
                    <a href="{{ settings.social_tumblr_link }}" target="_blank"><i class="flaticon-tumblr"></i></a>
                  {% endif %}

                  {% if settings.social_vimeo_link != blank %}
                    <a href="{{ settings.social_vimeo_link }}" target="_blank"><i class="flaticon-vimeo"></i></a>
                  {% endif %}
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- -=== Header Navigation === -->
  <div class="header-navigation style-two">
    <div class="container">
      <div class="primary-menu">
        <div class="nav-inner-menu">
          <div class="site-branding">
            <a href="{{routes.root_url}}" class="brand-logo">
              {% if shop.brand.logo != blank %}
                <img src="{{ shop.brand.logo |  image_url: width: 150, height: 50 }}" alt="Site Logo">
              {% else %}
                <h3>{{ shop.name }}</h3>
              {% endif %}
            </a>
          </div>
          <div class="pesco-nav-menu ">
            <!-- === Responsive Menu Search === -->
            <div class="nav-search mb-40 d-block d-lg-none">
              <div class="form-group">
                <input type="search" class="form_control" placeholder="Search Here" name="search">
                <button class="search-btn"><i class="far fa-search"></i></button>
              </div>
            </div>
            <nav class="main-menu">
              <ul>
                {% for single_menu in navigation_menu.links %}
                  <li class="menu-item {% if single_menu.links != blank %}has-children{% endif %}">
                    <a href="{{ single_menu.url }}">{{ single_menu.title }}</a>

                    {% if single_menu.links != blank %}
                      <ul class="sub-menu">
                        {% for childLink in single_menu.links %}
                          <li class="menu-item {% if childLink.links != blank %}has-children{% endif %}">
                            <a href="{{ childLink.url }}">{{ childLink.title }}</a>

                            {% if childLink.links != blank %}
                              <ul class="sub-menu">
                                {% for grandChildLink in childLink.links %}
                                  <li>
                                    <a href="{{ grandChildLink.url }}">{{ grandChildLink.title }}</a>
                                  </li>
                                {% endfor %}
                              </ul>
                            {% endif %}
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}

                {% comment %} <li class="menu-item"><a href="contact.html">Contact</a></li> {% endcomment %}
              </ul>
            </nav>

            <!-- ===  Hotline Support  === -->
            <div class="hotline-support d-flex d-lg-none mt-30">
              <div class="icon">
                <i class="far fa-headset"></i>
              </div>
              <div class="info">
                <span>24/7 Support</span>
                <h5><a href="tel:+941234567894">+94 123 4567 894</a></h5>
              </div>
            </div>
          </div>
          <!-- === Nav Right Item === -->
          <div class="nav-right-item style-one">
            <ul class="d-flex align-items-center">
              <li>
                <button class="search-btn d-lg-block d-none"><i class="far fa-search"></i></button>
              </li>
              <li>
                <div class="wishlist-btn d-lg-block d-none">
                  <i class="far fa-heart"></i><span class="pro-count">12</span>
                </div>
              </li>
              <li>
                <div class="cart-button d-flex align-items-center">
                  <div class="icon"><i class="fas fa-shopping-bag"></i><span class="pro-count">01</span></div>
                </div>
              </li>
            </ul>
            <div class="navbar-toggler d-block d-lg-none">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
{% schema %}
{
  "name": "Navbar",
  "settings": [
    {
      "type": "link_list",
      "id": "navbar_menu",
      "label": "Select a Menu",
      "default": "main-menu"
    },
    {
      "type": "text",
      "id": "shop_contact_phone",
      "label": "Enter Shop Contact Phone"
    },
    {
      "type": "text",
      "id": "shipping_text",
      "label": "Enter Shipping Text",
      "default": "Free Shipping"
    },
    {
      "type": "text",
      "id": "social_box",
      "label": "Social Box Title",
      "default": "Follow Us"
    }
  ],
  "presets": [
    {
      "name": "Fashibo Navbar"
    }
  ]
}
{% endschema %}
